        "    z: 1 * width * zoom\n",
        "  };\n",
        "\n",
        "  stroke(255, 0, 0); // Red\n",
        "  strokeWeight(12);\n",
        "  point(p0.x, p0.y, p0.z);\n",
        "  point(p1.x, p1.y, p1.z);\n",
        "\n",
        "  // Add blue point at (0.87, 0.87, 0.87)\n",
        "  let p2 = {\n",
        "    x: 0.87 * width * zoom,\n",
        "    y: 0.87 * height * zoom,\n",
